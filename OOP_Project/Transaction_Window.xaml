<Window x:Class="OOP_Project.Transaction_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Project"
        mc:Ignorable="d"
        Title="Transaction_Window" Height="700" Width="500" Background="#04c582"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Border Background="#2e3137" CornerRadius="20" Margin="20">
            <ListBox Name="lstDetails" Background="#545d6a" HorizontalAlignment="Center" Height="100" Margin="0, 50, 0, 0" VerticalAlignment="Top" Width="200" Foreground="White">
            </ListBox>
        </Border>
        <Button Content="Add Transaction" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,500,0,0" Click="TransClick"/>
    </Grid>
</Window>
